    private void btn_barGraphActionPerformed(java.awt.event.ActionEvent evt, HashMap <String,ArrayList<String>> total) {//GEN-FIRST:event_btn_barGraphActionPerformed
        // TODO add your handling code here:
    	ArrayList<String> testParam=total.get("AppRating");
    	ArrayList<String> testName=total.get("AppName");
    	
    	ArrayList<Integer> applicationParamInteger= new ArrayList<Integer>();
    	
    	for(int j=0;j<testParam.size();j++)
        {
      	//  System.out.println("Logger present here 7");
      	  String s = testParam.get(j).substring(0, 4).replace(",","");
      	  //System.out.println(s);
        int a = Integer.parseInt(s);
        System.out.println("a---->"+a);
        applicationParamInteger.add(a);
        }
    	
    	
        // TODO add your handling code here:
    	System.out.println("Time Machine : --->"+testParam);
    	System.out.println("Time Machine : --->"+testName);
    	DefaultCategoryDataset  ds = new DefaultCategoryDataset();
        for(int k=0;k<applicationParamInteger.size();k++)
        ds.setValue(applicationParamInteger.get(k),"Downloads",testName.get(k));        
        JFreeChart chart = ChartFactory.createBarChart("Analysis", "App Name", "Rating", ds, PlotOrientation.VERTICAL,false,true,false);
        CategoryPlot p = chart.getCategoryPlot();
        p.setRangeGridlinePaint(Color.BLACK);
        ChartFrame frame = new ChartFrame("Bar Chart for Apps", chart);
        frame.setVisible(true);
        frame.setSize(450,350);
        
    }//GEN-LAST:event_btn_barGraphActionPerformed

    private void btn_pie_chartActionPerformed(java.awt.event.ActionEvent evt,HashMap <String,ArrayList<String>> total) {//GEN-FIRST:event_btn_pie_chartActionPerformed
    	ArrayList<String> testRating=total.get("AppRating");
    	ArrayList<String> testName=total.get("AppName");
    	
    	ArrayList<Integer> applicationRatingInteger= new ArrayList<Integer>();
    	
    	for(int j=0;j<testRating.size();j++)
        {
      	//  System.out.println("Logger present here 7");
      	  String s = testRating.get(j).substring(0, 4).replace(",","");
      	  //System.out.println(s);
        int a = Integer.parseInt(s);
        System.out.println("a---->"+a);
        applicationRatingInteger.add(a);
        }
    	
    	
        // TODO add your handling code here:
    	System.out.println("Time Machine : --->"+testRating);
    	System.out.println("Time Machine : --->"+testName);
        DefaultPieDataset ds  = new DefaultPieDataset();
        for(int k=0;k<applicationRatingInteger.size();k++)
        ds.setValue(testName.get(k),applicationRatingInteger.get(k));
        
        JFreeChart chart = ChartFactory.createPieChart("Downloads", ds,true,true,true);
        PiePlot p=(PiePlot)chart.getPlot();
        /*PiePlot3D p=(PiePlot3D)chart.getPlot();
        p.setForegroundAlpha(TOP_ALIGNMENT);*/
        ChartFrame frame = new ChartFrame("Pie Chart",chart);
        frame.setVisible(true);
        frame.setSize(450,500);
        
        
        
        
        
        
    }//GEN-LAST:event_btn_pie_chartActionPerformed
   

